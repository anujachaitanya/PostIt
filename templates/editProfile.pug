include ./lib/lib.pug

doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/user/css/menubar.css')
  link(rel='stylesheet' href='/user/css/userProfile.css')
  title PostIt | Edit profile

+generateMenuBar(avatarUrl)
.user-profile
  .user-info
    .user-name
      span.username(contenteditable='true')=displayName
    .user-name
      button.profile-action save
      button.profile-action.cancel-button cancel
  img.profile-picture(src=avatarUrl alt='cricket')
