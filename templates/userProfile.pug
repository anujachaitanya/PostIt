include ./lib/lib.pug

head
  meta(charset='UTF-8')
  script(src="/js/request.js")
  script(src="/js/profile.js")
  link(rel='stylesheet' href='/css/userProfile.css')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title PostIt | Profile
+generateMenuBar(avatarUrl)
+getProfileHeader(userDetails,avatarUrl,followersCount, followingCount)
.all-posts
  each post in posts
    .post
      .user-details
        img.profile(src=userDetails.avatarUrl)
        .details
          span.author-name=userDetails.displayName
          span.date=takeMoment(post.lastModified)
      .title.title-text
        a.link-text(href=`/blog/${post.id}`)=post.title
      .data=JSON.parse(post.content).blocks[0].data.text
