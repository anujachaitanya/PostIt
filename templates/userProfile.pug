head
  meta(charset='UTF-8')
  include ./lib/lib.pug
  link(rel='stylesheet' href='/css/userProfile.css')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Profile
  +generateMenuBar(avatar_url)
.user-profile
  .user-info
    span.username=username
    div
      span.follow-details 45 followers 
      span.follow-details 34 following 
  img.profile-picture(src=author_avatar)
.all-posts
  each post in posts
    .post
      .user-details
        img.author-profile(src=author_avatar)
        .details
          span.author-name=username
          span.date=takeMoment(post.last_modified)
      .title-text
        a.title(href=`/blog/${post.id}`)=post.title
      .data=JSON.parse(post.content).blocks[0].data.text
