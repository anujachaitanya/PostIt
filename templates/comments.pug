doctype html
head
  meta(charset='UTF-8')
  link(rel='stylesheet' href='/css/comments.css')
  include ./menubar.pug
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Comments
  if userAvatar_url
    #newComment
      .user-details
        img.user-profile(src=userAvatar_url )
        span.username=currentUser
      p#new-comment.comment(contenteditable='true' placeholder='Write your thoughts here ...')
      button#publish Publish

each value in comments
  .comment-box
    .user-details
      img.user-profile(src=value.avatar_url)
      span.username=value.username
    p.commentText=value.comment
   

   
